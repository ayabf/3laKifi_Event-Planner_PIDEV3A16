<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane style="-fx-background-color: #BCA2BF;" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierReportController">

    <children>
        <!-- 🔹 Titre -->
        <Label layoutX="20" layoutY="20" style="-fx-font-size: 20px; -fx-text-fill: white;" text="✏ Update Report Status" />

        <!-- 🔹 Label Status -->
        <Label layoutX="20" layoutY="120" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Status:" />

        <!-- 🔹 ChoiceBox avec fx:id et valeurs définies en FXML -->
        <ChoiceBox fx:id="statusChoiceBox" layoutX="100.0" layoutY="115.0" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Pending"/>
                    <String fx:value="Verified"/>
                    <String fx:value="Rejected"/>
                </FXCollections>
            </items>
        </ChoiceBox>

        <!-- 🔹 Boutons -->
        <Button fx:id="btnUpdate" layoutX="120" layoutY="230" onAction="#updateReportStatus"
                prefWidth="120" style="-fx-background-color: #533c56; -fx-text-fill: white;" text="✅ Update" />

        <Button fx:id="btnCancel" layoutX="260" layoutY="230" onAction="#retournerVersAfficherReports"
                prefWidth="120" style="-fx-background-color: #533c56; -fx-text-fill: white;" text="❌ Cancel" />

    </children>
</AnchorPane>
