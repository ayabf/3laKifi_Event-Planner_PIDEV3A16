<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            fx:controller="controllers.OrderCardAdminController"
            prefHeight="150.0" prefWidth="600.0">

    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="order-card">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Colonne Infos Commande -->
        <VBox spacing="6">
            <Label fx:id="orderIdLabel" styleClass="order-id" visible="false" managed="false"/>
            <Label fx:id="userIdLabel" />
            <Label fx:id="orderDateLabel" />
            <Label fx:id="totalLabel" />
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Colonne Statut -->
        <VBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="statusComboBox" prefWidth="140"/>
            <Button text="âœ… Update Status" onAction="#handleUpdateStatus"
                    styleClass="update-button"/>
        </VBox>

    </HBox>
</AnchorPane>
