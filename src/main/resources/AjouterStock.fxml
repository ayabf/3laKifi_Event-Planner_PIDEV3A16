<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterStockController"
      spacing="10" alignment="CENTER">

    <Label text="Ajouter un Stock" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Quantité disponible:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtAvailableQuantity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Quantité minimale:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtMinimumQuantity" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="ID Utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtUserId" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button fx:id="btnAddStock" text="Ajouter Stock" onAction="#ajouterStock"/>
</VBox>
