<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.OrderListController"
            stylesheets="@css/styles.css"
            prefWidth="800" prefHeight="600">

    <VBox spacing="15" layoutX="20" layoutY="20">
        <!-- ✅ Titre -->
        <Label text="Mes Commandes" styleClass="label-title" />

        <!-- ✅ Barre de recherche -->
        <TextField fx:id="searchField" promptText="Rechercher une commande..."
                   onKeyReleased="#searchOrders"
                   styleClass="text-field-search"/>

        <!-- ✅ Liste des commandes sous forme de cartes -->
        <ScrollPane fitToWidth="true" prefHeight="500" styleClass="scroll-pane">
            <content>
                <VBox fx:id="orderListContainer" styleClass="order-list-container">
                    <!-- Les commandes seront ajoutées dynamiquement ici -->
                </VBox>
            </content>
        </ScrollPane>
    </VBox>

</AnchorPane>
