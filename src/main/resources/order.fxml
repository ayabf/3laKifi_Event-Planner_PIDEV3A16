<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.OrderController"
            stylesheets="@css/styles.css"
            prefWidth="700" prefHeight="400">

    <VBox spacing="10" layoutX="20" layoutY="20">
        <Label text="Mes Commandes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Liste des commandes -->
        <TableView fx:id="orderTable">
            <columns>
                <TableColumn text="ID" fx:id="orderIdColumn"/>
                <TableColumn text="Date" fx:id="orderDateColumn"/>
                <TableColumn text="Prix Total" fx:id="orderTotalColumn"/>
                <TableColumn text="Méthode de Paiement" fx:id="orderPaymentColumn"/>
                <TableColumn text="Statut" fx:id="orderStatusColumn"/>
            </columns>
        </TableView>

        <!-- Bouton pour voir les détails -->
        <HBox spacing="10">
            <Button text="Voir Détails" fx:id="viewOrderDetailsButton" onAction="#viewOrderDetails"
                    style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Annuler Commande" fx:id="cancelOrderButton" onAction="#cancelOrder"
                    style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </VBox>

</AnchorPane>