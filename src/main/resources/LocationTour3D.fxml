<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.SubScene?>
<?import javafx.scene.Group?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="controllers.LocationTour3DController"
            styleClass="tour-container" stylesheets="@styles/global.css">
    
    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="locationName" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="resetButton" styleClass="nav-button">
                <graphic>
                    <FontAwesomeIconView glyphName="REFRESH" size="1.5em"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Reset View" styleClass="custom-tooltip"/>
                </tooltip>
            </Button>
        </HBox>
        
        <!-- 3D Scene -->
        <StackPane VBox.vgrow="ALWAYS">
            <SubScene fx:id="tourScene" width="1200" height="800">
                <root>
                    <Group fx:id="root3D"/>
                </root>
            </SubScene>
        </StackPane>
        
        <!-- Controls -->
        <VBox fx:id="controls" spacing="10" styleClass="controls-container">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Zoom:" styleClass="control-label"/>
                <Slider fx:id="zoomSlider" prefWidth="200"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane> 