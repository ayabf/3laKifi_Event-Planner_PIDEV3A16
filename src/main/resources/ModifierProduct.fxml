<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierProductController" spacing="10">
    <Label text="Modifier le Produit" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Référence:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="txtReference" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Nom:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtDescription" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Prix:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="txtPrice" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Stock ID:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="txtStockId" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Image URL:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="txtImageUrl" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Catégorie:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="txtCategory" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="User ID:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <TextField fx:id="txtUserId" GridPane.rowIndex="7" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10">
        <Button text="Rechercher" onAction="#rechercherProduct" />
        <Button text="Modifier" onAction="#modifierProduct" />
        <Button text="Annuler" onAction="#annulerModification" />
    </HBox>
</VBox>
