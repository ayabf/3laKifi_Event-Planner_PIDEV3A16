<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.OrderListController"
            stylesheets="@css/styles.css"

            prefWidth="600" prefHeight="400">

    <VBox spacing="10" layoutX="50" layoutY="20">
        <Label text="Mes Commandes" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <ScrollPane fitToWidth="true" prefHeight="350">
            <VBox fx:id="orderListContainer" spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            </VBox>
        </ScrollPane>
    </VBox>

</AnchorPane>
