<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.CartController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #F4F4F4;">

    <!-- Titre -->
    <Label text="Shopping Cart"
           layoutX="20" layoutY="10"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- ListView pour afficher les produits dynamiquement -->
    <ListView fx:id="cartListView"
              layoutX="20" layoutY="50" prefWidth="560" prefHeight="350"
              style="-fx-background-color: white; -fx-border-radius: 10;"/>

    <!-- Sous-total -->
    <HBox spacing="10" layoutX="400" layoutY="420">
        <Label text="Subtotal" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="subtotalLabel"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Bouton de paiement -->
    <Button text="Proceed to Checkout" fx:id="checkoutButton" onAction="#checkout"
            layoutX="400" layoutY="460"
            style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10;"/>
</AnchorPane>
