<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #533C56;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventsClientController">
    <children>
        <!-- Titre -->
        <Label layoutX="30.0" layoutY="20.0" text="Explore Events" textFill="white">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Grille des événements -->
        <GridPane fx:id="eventsGridPane" layoutX="30.0" layoutY="70.0" prefHeight="480.0" prefWidth="840.0" hgap="20.0" vgap="20.0" style="-fx-background-color: #99707E; -fx-padding: 10px; -fx-border-radius: 10px;">
            <!-- Les événements seront chargés ici dynamiquement -->
        </GridPane>

        <!-- Bouton Filtrer -->
        <Button fx:id="filterButton" layoutX="770.0" layoutY="20.0" mnemonicParsing="false" text="Filter" style="-fx-background-color: #bca2bf; -fx-text-fill: white; -fx-font-weight: bold;" />
    </children>
</AnchorPane>
