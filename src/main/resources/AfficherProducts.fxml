<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherProductsController" spacing="10">
    <HBox spacing="10">
        <Label text="Filter by Category:" />
        <ComboBox fx:id="categoryFilter" promptText="Select a category" onAction="#filterByCategory"/>
    </HBox>

    <FlowPane fx:id="productsContainer" hgap="15" vgap="15">
        <Label text="Loading products..." />
    </FlowPane>
</VBox>
