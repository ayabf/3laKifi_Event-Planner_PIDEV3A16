<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane style="-fx-background-color: #BCA2BF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierPublicationController">
    <children>
        <!-- 🔹 Titre -->
        <Label layoutX="20" layoutY="20" style="-fx-font-size: 20px; -fx-text-fill: white;" text="✏ Modifier Publication" />

        <!-- 🔹 Champs de modification -->
        <Label layoutX="20" layoutY="70" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Titre :" />
        <TextField fx:id="titlePublicationTextfield" layoutX="120" layoutY="65" prefWidth="350" style="-fx-background-color: #e0d5e6;" />

        <Label layoutX="20" layoutY="120" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Description :" />
        <TextField fx:id="descriptionPublicationTextfield" layoutX="120" layoutY="115" prefWidth="350" style="-fx-background-color: #e0d5e6;" />

        <Label layoutX="20" layoutY="170" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Image URL :" />
        <TextField fx:id="UrltitlePublicationTextfield" layoutX="120" layoutY="165" prefWidth="350" style="-fx-background-color: #e0d5e6;" />

        <!-- 🔹 Boutons -->
        <Button fx:id="btnUpdate" layoutX="120" layoutY="230" onAction="#updatePublication" prefWidth="120" style="-fx-background-color: #533c56; -fx-text-fill: white;" text="✅ Mettre à jour" />

        <Button layoutX="260" layoutY="230" onAction="#btnCancel" prefWidth="120" style="-fx-background-color: #533c56; -fx-text-fill: white;" text="❌ Annuler" />
    </children>
</AnchorPane>
