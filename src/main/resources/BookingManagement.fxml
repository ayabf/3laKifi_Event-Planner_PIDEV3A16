<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.BookingManagementController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Gestion des Réservations" styleClass="header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="200"/>
        <Button onAction="#loadBookingData" styleClass="action-button">
            <graphic>
                <FontAwesomeIconView glyphName="REFRESH" size="1.2em"/>
            </graphic>
            <tooltip>
                <Tooltip text="Refresh" styleClass="custom-tooltip"/>
            </tooltip>
        </Button>
    </HBox>

    <!-- Bookings Table Header -->
    <HBox spacing="5" styleClass="table-header">
        <Label text="ID" minWidth="80" maxWidth="80" styleClass="header-cell"/>
        <Label text="Événement" minWidth="200" maxWidth="200" styleClass="header-cell"/>
        <Label text="Location" minWidth="200" maxWidth="200" styleClass="header-cell"/>
        <Label text="Date de début" minWidth="150" maxWidth="150" styleClass="header-cell"/>
        <Label text="Date de fin" minWidth="150" maxWidth="150" styleClass="header-cell"/>
        <Label text="Actions" minWidth="200" maxWidth="200" styleClass="header-cell"/>
    </HBox>

    <!-- Bookings Container -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="bookings-scroll">
        <VBox fx:id="bookingsContainer" spacing="2" styleClass="bookings-container"/>
    </ScrollPane>
</VBox> 