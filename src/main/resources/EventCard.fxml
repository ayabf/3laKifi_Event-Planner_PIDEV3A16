<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="event-card" stylesheets="@styles/global.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventCardController">
    <VBox spacing="15" styleClass="card">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Status Badge -->
        <HBox fx:id="statusContainer" alignment="CENTER_LEFT" spacing="8" styleClass="status-indicator">
            <FontAwesomeIconView fx:id="statusIcon" glyphName="CALENDAR" size="1.2em" />
            <Label fx:id="statusText" styleClass="status-text" />
        </HBox>

        <!-- Event Image with Hover Effect -->
        <StackPane styleClass="image-container">
            <ImageView fx:id="eventImage" fitHeight="200" fitWidth="300" preserveRatio="true" styleClass="event-image" />
            <VBox fx:id="imageOverlay" alignment="CENTER" spacing="10" styleClass="image-overlay" visible="false">
                <Label fx:id="overlayTitle" styleClass="overlay-title" />
                <Label fx:id="overlayDate" styleClass="overlay-text" />
            </VBox>
        </StackPane>

        <!-- Event Title -->
        <Label fx:id="eventName" styleClass="event-title" />

        <!-- Event Description -->
        <Label fx:id="eventDescription" styleClass="description-text" wrapText="true" />

        <!-- Event Details -->
        <VBox spacing="10" styleClass="details-container">
            <!-- Location -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-item">
                <FontAwesomeIconView glyphName="MAP_MARKER" size="1.2em" />
                <Label fx:id="eventCity" styleClass="info-text" />
            </HBox>

            <!-- Capacity -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-item">
                <FontAwesomeIconView glyphName="USERS" size="1.2em" />
                <Label fx:id="eventCapacity" styleClass="info-text" />
            </HBox>

            <!-- Date & Time -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="info-item">
                <FontAwesomeIconView glyphName="CLOCK_O" size="1.2em" />
                <VBox spacing="5">
                    <Label fx:id="eventStartDate" styleClass="info-text" />
                    <Label fx:id="eventEndDate" styleClass="info-text-secondary" />
                </VBox>
            </HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />

        <!-- Action Buttons -->
        <HBox alignment="CENTER" prefHeight="24.0" prefWidth="336.0" spacing="15">
            <Button fx:id="editButton" maxWidth="58.0" minWidth="58.0" onAction="#handleEdit" prefHeight="24.0" prefWidth="58.0" styleClass="action-button, edit-button" text="Edit Event">
                <graphic>
                    <FontAwesomeIconView glyphName="PENCIL" size="1.2em" />
                </graphic>
                <tooltip>
                    <Tooltip text="Edit this event" />
                </tooltip>
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="action-button, delete-button" text="Delete">
                <graphic>
                    <FontAwesomeIconView glyphName="TRASH" size="1.2em" />
                </graphic>
                <tooltip>
                    <Tooltip text="Delete this event" />
                </tooltip>
            </Button>
            <Button fx:id="detailsButton" onAction="#handleDetails" styleClass="action-button, details-button" text="View Details">
                <graphic>
                    <FontAwesomeIconView glyphName="INFO" size="1.2em" />
                </graphic>
                <tooltip>
                    <Tooltip text="View event details" />
                </tooltip>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
