<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane             stylesheets="@css/styles.css"

                        xmlns="http://javafx.com/javafx"

                        xmlns:fx="http://javafx.com/fxml"
                        fx:controller="controllers.OrderEditController"
                        prefWidth="400" prefHeight="300">

    <VBox spacing="10" layoutX="50" layoutY="20">
        <Label text="Modifier la Commande" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Label text="Nouvelle Adresse:"/>
        <TextField fx:id="addressField"/>

        <Label text="Nouvelle Date de l'Événement:"/>
        <DatePicker fx:id="eventDatePicker"/>

        <Button text="Enregistrer les modifications" fx:id="saveButton" onAction="#saveChanges"/>
    </VBox>

</AnchorPane>