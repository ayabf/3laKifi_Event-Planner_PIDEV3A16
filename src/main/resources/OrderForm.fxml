<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.OrderFormController"
            stylesheets="@css/styles.css"

            prefWidth="600" prefHeight="700">

    <VBox spacing="10" layoutX="50" layoutY="30">
        <Label text="Validation de la commande" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="Prix Total :" />
        <Label fx:id="totalPriceLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Date et Heure de l'événement :" />
        <HBox spacing="10">
            <DatePicker fx:id="eventDatePicker" promptText="Sélectionner une date" />
            <Label fx:id="errorDate" text="Date invalide !" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false"/>

            <Button fx:id="timePickerButton" text="Sélectionner l'heure" onAction="#openTimePicker"/>
            <Label fx:id="selectedTimeLabel" text="Heure sélectionnée: Aucune" />
            <Label fx:id="errorTime" text="Heure invalide !" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false"/>

        </HBox>






        <Label text="Adresse complète :" />
        <TextField fx:id="addressField" promptText="Ex: 12 Rue des Champs, Paris" />
        <Label fx:id="errorAddress" text="Adresse invalide !" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false"/>

        <Label text="Méthode de paiement :" />
        <ComboBox fx:id="paymentMethodBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Carte Bancaire" />
                    <String fx:value="PayPal" />
                    <String fx:value="Espèces" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label fx:id="errorPayment" text="Sélectionnez un mode de paiement !" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false"/>

        <Button text="Valider la commande" fx:id="validateOrderButton" onAction="#validateOrder"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8;" />
    </VBox>

</AnchorPane>
