    -fx-warning: #FFA726;
    -fx-error: #E53935;
    -fx-info: #2196F3;
    
    /* Shadows */
    -fx-shadow-1: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);
    -fx-shadow-2: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);
    -fx-shadow-3: dropshadow(gaussian, rgba(0,0,0,0.2), 16, 0, 0, 6);

    /* Transitions */
    -fx-transition-duration: 200ms;
    -fx-transition-timing: ease-out;
}

