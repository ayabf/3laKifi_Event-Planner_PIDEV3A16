<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SupprimerProductController" spacing="10">
    <Label text="Supprimer un Produit" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Référence du Produit:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="txtReference" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10">
        <Button text="Supprimer" onAction="#supprimerProduct" />
        <Button text="Annuler" onAction="#annulerSuppression" />
    </HBox>
</VBox>
