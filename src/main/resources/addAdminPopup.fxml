<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?> <!-- Ajout de l'import pour Insets -->

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.AddAdminController"
            stylesheets="@addadmin.css">
    <VBox alignment="CENTER" spacing="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
        </padding>

        <Label text="Ajouter un Administrateur" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <TextField fx:id="firstNameField" promptText="Prénom" />
        <TextField fx:id="lastNameField" promptText="Nom" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Mot de passe" />
        <TextField fx:id="addressField" promptText="Adresse" />
        <TextField fx:id="numTelField" promptText="Numéro de téléphone" />
        <Button text="Ajouter" onAction="#handleAddAdmin" />
    </VBox>
</AnchorPane>
