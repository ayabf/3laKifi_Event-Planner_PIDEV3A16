<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterReportController">
    <children>
        <VBox alignment="CENTER" spacing="12" style="-fx-padding: 20; -fx-background-color: #f8f9fa; -fx-border-radius: 10; -fx-border-color: #ddd;">
            <!-- 🔹 Titre -->
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #d9534f;" text="🚨 Signaler une publication" />

            <!-- 🔹 Informations sur la publication -->
            <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10; -fx-background-color: #fff; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <Label style="-fx-font-weight: bold;" text="📌 Titre de la publication :" />
                <Label fx:id="publicationTitleLabel" style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Titre..." />

                <Label style="-fx-font-weight: bold;" text="👤 Auteur de la publication :" />
                <Label fx:id="publicationAuthorLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Auteur..." />
            </VBox>

            <!-- 🔹 Informations sur le signalement -->
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold;" text="👤 Votre Nom d'Utilisateur :" />
                <Label fx:id="reporterUsernameLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Utilisateur..." />

                <Label style="-fx-font-weight: bold;" text="⚠ Raison du Signalement :" />
                <ChoiceBox fx:id="reportReason" prefWidth="280" />

                <Label style="-fx-font-weight: bold;" text="📝 Description :" />
                <TextArea fx:id="reportDescription" prefHeight="80" promptText="Décrivez la raison du signalement..." wrapText="true" />
            </VBox>

            <!-- 🔹 Boutons -->
            <HBox spacing="15">
                <Button fx:id="btnSubmitReport" onAction="#submitReport" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="🚀 Envoyer" />
                <Button fx:id="btnCancel" onAction="#closeWindow" style="-fx-background-color: #ccc; -fx-text-fill: black;" text="❌ Annuler" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
