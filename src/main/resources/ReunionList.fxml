            <Image url="@images/refreshIcone.png" />
        </image>
    </ImageView>

    <Button layoutX="760.0" onAction="#ouvrirFenetreAjoutReunion" layoutY="40.0" prefHeight="26.0" prefWidth="28.0" style="-fx-background-color: #007BFF; -fx-border-color: #0056b3; -fx-background-radius: 10; -fx-border-radius: 10;">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"  preserveRatio="true">
                <image>
                    <Image url="@images/addBTN.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
