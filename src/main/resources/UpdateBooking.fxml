<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.UpdateBookingController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier la réservation" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #533C56;"/>

    <GridPane vgap="10" hgap="10">
        <Label text="ID Événement:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #533C56;"/>
        <TextField fx:id="eventIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="ID Location:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #533C56;"/>
        <TextField fx:id="locationIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Date de début:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: #533C56;"/>
        <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <DatePicker fx:id="startDatePicker"/>
            <TextField fx:id="startTimeField" promptText="HH:mm" prefWidth="100"/>
        </HBox>

        <Label text="Date de fin:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: #533C56;"/>
        <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <DatePicker fx:id="endDatePicker"/>
            <TextField fx:id="endTimeField" promptText="HH:mm" prefWidth="100"/>
        </HBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" 
                style="-fx-background-color: #cebec9; -fx-text-fill: #533C56;"/>
        <Button text="Mettre à jour" onAction="#handleUpdate"
                style="-fx-background-color: #533C56; -fx-text-fill: white;"/>
    </HBox>
</VBox> 