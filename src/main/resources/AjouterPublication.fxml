<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterPublicationController">
   <stylesheets>
      <URL value="@styles/AjouterPublication-style.css" />
   </stylesheets>
   <children>
      <!-- Fond avec dégradé -->
      <Rectangle arcHeight="20.0" arcWidth="20.0" fill="#533C56" height="400.0" layoutX="0.0" layoutY="0.0" stroke="TRANSPARENT" strokeType="INSIDE" width="600.0">
         <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000080" height="10.0" radius="10.0" width="10.0" />
         </effect>
      </Rectangle>

      <!-- Contenu principal -->
      <VBox alignment="TOP_LEFT" layoutX="20.0" layoutY="20.0" spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>

         <!-- Titre -->
         <Text fill="WHITE" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Create New Publication" wrappingWidth="329.336669921875">
            <font>
               <Font name="Arial" size="24.0" />
            </font>
         </Text>

         <!-- Champ Titre -->
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Title:" wrappingWidth="63.96441650390625">
            <font>
               <Font name="Arial" size="16.0" />
            </font>
         </Text>
         <TextField fx:id="titlePublicationTextfield" prefHeight="30.0" prefWidth="300.0" promptText="Enter title" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" stylesheets="@styles/Publication-style.css" />

         <!-- Champ Description -->
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Description:" wrappingWidth="106.36444091796875">
            <font>
               <Font name="Arial" size="16.0" />
            </font>
         </Text>
         <TextField fx:id="descriptionPublicationTextfield" prefHeight="80.0" prefWidth="300.0" promptText="Enter description" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" stylesheets="@styles/Publication-style.css" />

         <!-- Champ Image URL -->
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Image URL:" wrappingWidth="106.36444091796875">
            <font>
               <Font name="Arial" size="16.0" />
            </font>
         </Text>
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <TextField fx:id="UrltitlePublicationTextfield" prefHeight="30.0" prefWidth="220.0" promptText="Enter image URL" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" stylesheets="@styles/Publication-style.css" />
            <Button onAction="#importPublication" prefHeight="30.0" prefWidth="70.0" styleClass="import-button" stylesheets="@styles/Publication-style.css" text="Import" />
         </HBox>

         <!-- Champ Username -->
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" wrappingWidth="85.56439208984375">
            <font>
               <Font name="Arial" size="16.0" />
            </font>
         </Text>
         <TextField fx:id="UsernameTextfield" prefHeight="30.0" prefWidth="300.0" promptText="Enter username" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" stylesheets="@styles/Publication-style.css" />

         <!-- Boutons -->
         <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button onAction="#cancelPublication" prefHeight="30.0" prefWidth="100.0" styleClass="cancel-button" stylesheets="@styles/Publication-style.css" text="Cancel" />
            <Button onAction="#ajouterPublication" prefHeight="30.0" prefWidth="100.0" styleClass="save-button" stylesheets="@styles/Publication-style.css" text="Save" />
         </HBox>
      </VBox>
      <ImageView fx:id="publicationImage" fitHeight="150.0" fitWidth="200.0" layoutX="386.0" layoutY="238.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
