<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" styleClass="root" stylesheets="@css/welcome.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.WelcomeCController">

    <padding>
        <Insets bottom="50" left="50" right="50" top="50"/>
    </padding>

    <!-- ✅ Section de bienvenue -->
    <VBox alignment="CENTER" spacing="15" styleClass="welcome-section">
        <FontAwesomeIconView glyphName="SHOPPING_CART" size="4em" styleClass="welcome-icon"/>
        <Label styleClass="welcome-header" text="Welcome to 3laKifi Orders"/>
        <Label styleClass="welcome-subtext" text="Manage your orders and cart easily"/>
    </VBox>

    <!-- ✅ Boutons de navigation -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#goToClientDashboard" styleClass="action-button client-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SHOPPING_BASKET" size="1.5em"/>
                    <Label styleClass="button-text" text="Client Space (Cart)"/>
                </HBox>
            </graphic>
        </Button>

        <Button onAction="#goToAdminDashboard" styleClass="action-button admin-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="CHART_BAR" size="1.5em"/>
                    <Label styleClass="button-text" text="Admin Dashboard"/>
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <Button mnemonicParsing="false" text="⬅ Back" onAction="#goBack" styleClass="back-button"/>
</VBox>
