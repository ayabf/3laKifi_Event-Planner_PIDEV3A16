<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.PromoAdminController"
            stylesheets="@css/styles.css">

    <VBox alignment="CENTER" spacing="20" prefWidth="500" prefHeight="500"
          style="-fx-padding: 30px; -fx-background-color: white; -fx-border-radius: 12px;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 12, 0, 0, 5);">

        <!-- Titre -->
        <Label text="🎟️ Ajouter un Code Promo" styleClass="label-title"/>

        <!-- Champ Code Promo -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="hbox-field">
            <Label text="📌 Code :" styleClass="label"/>
            <TextField fx:id="promoCodeField" promptText="Ex: PROMO10" styleClass="text-field"/>
        </HBox>
        <Label fx:id="errorCodeLabel" text="" styleClass="label-error"/>

        <!-- Champ Réduction (%) -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="hbox-field">
            <Label text="💲 Réduction :" styleClass="label"/>
            <TextField fx:id="percentageField" promptText="Ex: 10%" styleClass="text-field"/>
        </HBox>
        <Label fx:id="errorPercentageLabel" text="" styleClass="label-error"/>

        <!-- Champ Date d'expiration -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="hbox-field">
            <Label text="📅 Expire le :" styleClass="label"/>
            <DatePicker fx:id="expirationDatePicker" promptText="Sélectionner une date" styleClass="text-field"/>
        </HBox>
        <Label fx:id="errorDateLabel" text="" styleClass="label-error"/>

        <!-- Bouton Ajouter -->
        <Button text="➕ Ajouter Promo" fx:id="addPromoButton"
                onAction="#addPromo" styleClass="button"/>
    </VBox>

</AnchorPane>
