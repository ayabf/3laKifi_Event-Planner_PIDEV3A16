<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" styleClass="root" stylesheets="@css/welcome.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.WelcomeClientController">

    <padding>
        <Insets bottom="50" left="50" right="50" top="50"/>
    </padding>

    <!-- ✅ Section de bienvenue -->
    <VBox alignment="CENTER" spacing="15" styleClass="welcome-section">
        <FontAwesomeIconView glyphName="SHOPPING_CART" size="4em" styleClass="welcome-icon"/>
        <Label styleClass="welcome-header" text="Welcome to 3laKifi Orders"/>
        <Label styleClass="welcome-subtext" text="Manage your cart easily"/>
    </VBox>

    <!-- ✅ Bouton vers Cart uniquement -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#goToCart" styleClass="action-button client-button">
            <graphic>
                <HBox alignment="CENTER" spacing="10">
                    <FontAwesomeIconView glyphName="SHOPPING_BASKET" size="1.5em"/>
                    <Label styleClass="button-text" text="Go to Cart"/>
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <!-- ✅ Bouton Retour vers le menu Client -->
    <Button mnemonicParsing="false" text="⬅ Back" onAction="#goBack" styleClass="back-button"/>
</VBox>
