<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ForumController" stylesheets="styles/Publication-style.css">

    <!-- Barre latÃ©rale -->
    <VBox fx:id="sidebar" styleClass="sidebar" prefWidth="200"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
          spacing="10">
        <padding>
            <Insets top="20" left="10" right="10" bottom="20" />
        </padding>

        <!-- Titre du dashboard -->
        <Text fx:id="dashboardTitle" text="Dashboard" styleClass="dashboard-title">
            <font>
                <Font name="Arial Bold" size="20"/>
            </font>
        </Text>

        <!-- Boutons de navigation -->
        <Button fx:id="btnPost" text="Post" styleClass="nav-button" onAction="#handlePostButton" />
        <Button fx:id="btnReports" text="Reports" styleClass="nav-button" onAction="#handleReportsButton" />
        <Button fx:id="btnStatistiques" text="Statistiques" styleClass="nav-button" onAction="#handleStatistiquesButton" />

        <!-- Espace pour pousser les boutons vers le haut -->
        <VBox>
            <HBox/>
        </VBox>

    </VBox>

    <!-- Contenu principal -->
    <AnchorPane fx:id="contentPane" styleClass="content"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="0">

        <Text fx:id="contentTitle" text="Bienvenue sur le Dashboard" styleClass="content-title"
              layoutX="50" layoutY="50">
            <font>
                <Font name="Arial Bold" size="18"/>
            </font>
        </Text>

    </AnchorPane>

</AnchorPane>
